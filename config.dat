################################################################
# OBS C SDK Benchmark Tool Configuration File
# 
# Lines starting with '#' are comments.
# Key=Value format. Spaces around '=' are ignored.
################################################################

# --- Basic Connection Settings ---
# OBS Endpoint (e.g., obs.ap-southeast-1.myhuaweicloud.com)
Endpoint=obs.ap-southeast-1.myhuaweicloud.com

# Protocol: http or https
Protocol=https

# Enable HTTP Keep-Alive (true/false)
KeepAlive=true

# --- Logging ---
# Levels: DEBUG, INFO, WARN, ERROR, OFF
LogLevel=INFO

# --- Concurrency & Users ---
# Number of concurrent users (must match users.dat)
Users=1

# Number of threads per user (Total Threads = Users * ThreadsPerUser)
ThreadsPerUser=1

# --- Bucket Naming Strategy ---
# 1. BucketNameFixed: If set, all threads use this single bucket.
# 2. BucketNamePrefix: If Fixed is empty, bucket = {ak_lowercase}.{prefix}
BucketNamePrefix=bench.test
BucketNameFixed=

# --- Test Case Selection ---
# 201: PUT (Upload)
# 202: GET (Download)
# 204: DELETE
# 216: MULTIPART UPLOAD
# 230: RESUMABLE UPLOAD (UploadFile)
# 900: MIXED MODE (See MixOperation)
TestCase=201

# --- Operation Settings ---

# Run Mode:
# 1. Time-based: Set RunSeconds > 0 (e.g., 60). Tool stops after 60s.
# 2. Count-based: Set RunSeconds = 0 and RequestsPerThread > 0.
# 3. Dual Constraint: Set both. Tool stops whichever comes first.
RunSeconds=
RequestsPerThread=1

# Object Size (in bytes):
# Format 1: Fixed size (e.g., 1048576)
# Format 2: Range (e.g., 4096~104857600). Tool picks a random size for each request.
ObjectSize=4096~10485760

# Range Download Options (Only for TestCase=202):
# Randomly selected for each GET request. Separated by ';'.
# Examples: 0-9; 100-200; -512; 1024-
# Leave empty to download the full object.
Range=

# Multipart / Resumable Settings
PartSize=5242880

# --- Naming Pattern ---
# Object Key Prefix (e.g., obj)
KeyPrefix=obj

# Add hash to object name to disperse naming (true/false)
# Pattern: {username}-{hash}-{prefix}-{threadId}
ObjNamePatternHash=true

# --- Mixed Mode Settings (TestCase=900) ---
# Operation sequence (e.g., 201,202,204)
MixOperation=201,202,204
# How many loops of the sequence to run per thread
MixLoopCount=1

# --- Data Integrity ---
# Enable Data Validation (true/false)
# Uses Scheme 3 (Circular Buffer LCG) for high-performance in-memory validation.
# NOTE: Set to false for Mock testing or max performance.
EnableDataValidation=false

# --- Resumable Upload (TestCase=230) ---
# Path to local file for upload (will be auto-generated if missing)
UploadFilePath=./test_data.bin
# Enable Checkpoint mechanism
EnableCheckpoint=true

# --- Security & SSL (Advanced) ---
# GM (GuoMi) Mode Switch (true/false)
GmModeSwitch=false

# SSL Versions: 1.0, 1.1, 1.2, 1.3
SslMinVersion=1.2
SslMaxVersion=1.3

# Mutual SSL Authentication (true/false)
MutualSslSwitch=false
ClientCertPath=
ClientKeyPath=
ClientKeyPassword=
